<Window x:Class="Vistas.WinAltaDocente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Docentes" Height="400" Width="500" Background="#FAF0E6" Closing="Window_Closing">
    <Grid>
        <Label Content="Nombre:" Height="28" Margin="81,136,326,0" Name="label1" VerticalAlignment="Top" FontSize="14" />
        <Label Content="Apellido:" Height="28" HorizontalAlignment="Left" Margin="81,172,0,0" Name="label2" VerticalAlignment="Top" Width="64" FontSize="14" />
        <Label Content="DNI:" Height="28" HorizontalAlignment="Left" Margin="81,204,0,0" Name="label3" VerticalAlignment="Top" Width="43" FontSize="14" />
        <Label Content="Email:" Height="28" HorizontalAlignment="Left" Margin="81,238,0,0" Name="label4" VerticalAlignment="Top" Width="54" FontSize="14" />
        <TextBox Style="{StaticResource textBoxDocente}" Height="22" HorizontalAlignment="Left" Margin="208,142,0,0" Name="txtNombre" VerticalAlignment="Top" Width="181" TextChanged="TextBox_TextChanged"/>
        <TextBox Style="{StaticResource textBoxDocente}" Height="22" HorizontalAlignment="Left" Margin="208,178,0,0" Name="txtApellido" VerticalAlignment="Top" Width="181" TextChanged="TextBox_TextChanged"/>
        <TextBox Style="{StaticResource textBoxDocente}" Height="22" HorizontalAlignment="Left" Margin="208,210,0,0" Name="txtDni" VerticalAlignment="Top" Width="181" TextChanged="TextBox_TextChanged"/>
        <TextBox Style="{StaticResource textBoxDocente}" Height="22" HorizontalAlignment="Left" Margin="208,244,0,0" Name="txtEmail" VerticalAlignment="Top" Width="181" TextChanged="TextBox_TextChanged"/>
        <Image Height="73" HorizontalAlignment="Left" Margin="198,12,0,0" Name="image3" Stretch="Fill" VerticalAlignment="Top" Width="83" Source="/Vistas;component/Images/profesor.png" />
        <Button Style="{StaticResource btnLimpiarAltaDocente}" Content="Limpiar" Height="31" HorizontalAlignment="Left" Margin="340,296,0,0" Name="btnCancelar" VerticalAlignment="Top" Width="83" AllowDrop="False" Click="btnCancelar_Click" />
        <Button Style="{StaticResource btnRegistrarAltaDocente}" Content="Registrar" Height="31" HorizontalAlignment="Left" Margin="216,296,0,0" Name="btnRegistrar" VerticalAlignment="Top" Width="83" Click="btnRegistrar_Click" />
        <Button Style="{StaticResource btnAtrasAltaDocente}" Content="Atras" Height="31" HorizontalAlignment="Left" Margin="81,296,0,0" Name="btnAtras" VerticalAlignment="Top" Width="83" Click="btnAtras_Click" />
        <Label Content="Registro de Docente" Height="41" HorizontalAlignment="Left" Margin="136,83,0,0" Name="label5" VerticalAlignment="Top" Width="211" FontSize="20" FontWeight="Bold" Foreground="#FF2D6A6A" />
    </Grid>
</Window>
