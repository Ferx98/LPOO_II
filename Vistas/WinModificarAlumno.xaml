<Window x:Class="Vistas.WinModificarAlumno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="Modificar alumnos" Height="673" Width="578" Background="#FAF0E6" Closing="Window_Closing" Loaded="Window_Loaded">
    <Window.Resources>
        <ObjectDataProvider 
            ObjectType="{x:Type svc:TrabajarAlumnos}"
            MethodName="traerTodosAlumnos"
            x:Key="list_alumnos"
        />
    </Window.Resources>
    <Grid>
        <Label Content="Nombre:" Height="28" Margin="132,434,275,0" Name="label5" VerticalAlignment="Top" FontSize="14" />
        <Label Content="Apellido:" Height="28" HorizontalAlignment="Left" Margin="132,468,0,0" Name="label2" VerticalAlignment="Top" Width="64" FontSize="14" />
        <Label Content="DNI:" Height="28" HorizontalAlignment="Left" Margin="132,502,0,0" Name="label3" VerticalAlignment="Top" Width="43" FontSize="14" />
        <Label Content="Email:" Height="28" HorizontalAlignment="Left" Margin="132,536,0,0" Name="label4" VerticalAlignment="Top" Width="54" FontSize="14" />
        <TextBox Style="{StaticResource ResourceKey=txtValidacion}" Text="{Binding Alu_Nombre,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True,NotifyOnValidationError=True}" Validation.ErrorTemplate="{StaticResource txtErrorAlumnos}" Height="30" HorizontalAlignment="Left" Margin="250,434,0,0" Name="txtNombre" VerticalAlignment="Top" Width="181" />
        <TextBox Style="{StaticResource ResourceKey=txtValidacion}" Text="{Binding Alu_Apellido,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True,NotifyOnValidationError=True}" Validation.ErrorTemplate="{StaticResource txtErrorAlumnos}" Height="30" HorizontalAlignment="Left" Margin="250,468,0,0" Name="txtApellido" VerticalAlignment="Top" Width="181" />
        <TextBox Style="{StaticResource ResourceKey=txtValidacion}" Text="{Binding Alu_DNI,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True,NotifyOnValidationError=True}" Validation.ErrorTemplate="{StaticResource txtErrorAlumnos}" Height="30" HorizontalAlignment="Left" Margin="250,502,0,0" Name="txtDNI" VerticalAlignment="Top" Width="181" />
        <TextBox Style="{StaticResource ResourceKey=txtValidacion}" Text="{Binding Alu_Email,UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True,NotifyOnValidationError=True}" Validation.ErrorTemplate="{StaticResource txtErrorAlumnos}" Height="30" HorizontalAlignment="Left" Margin="250,536,0,0" Name="txtEmail" VerticalAlignment="Top" Width="181" />
        <Label Content="Modificación de Alumnos" Height="41" HorizontalAlignment="Left" Margin="142,16,0,0" Name="label1" VerticalAlignment="Top" Width="251" FontSize="20" FontWeight="Bold" Foreground="#FF2D6A6A" />
        <Image Height="78" HorizontalAlignment="Left" Margin="234,63,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="81" Source="/Vistas;component/Images/ModificarAlumno.png" />
        <Label Content="Elija el alumno que desea modificar" Height="28" HorizontalAlignment="Left" Margin="150,147,0,0" Name="label6" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FF2D6A6A" FontSize="14"/>
        <Button Style="{StaticResource ResourceKey=btn_plantilla_registrar}" IsEnabled="False" Content="Modificar" Height="38" HorizontalAlignment="Left" Margin="234,584,0,0" Name="btnModificar" VerticalAlignment="Top" Width="81" Click="button1_Click" />
        <Label Content="Seleccione un registro en la grilla para realizar la modificación" Height="28" HorizontalAlignment="Left" Margin="62,389,0,0" Name="label7" VerticalAlignment="Top" FontFamily="Lune" FontSize="14" Foreground="#FFD84545" FontWeight="SemiBold" Width="476" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_limpiar}" IsEnabled="False" Content="Cancelar" Height="38" HorizontalAlignment="Right" Margin="0,584,127,0" Name="btnCancelar" VerticalAlignment="Top" Width="81" Click="btnCancelar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_atras}" Content="Atrás" Height="38" HorizontalAlignment="Left" Margin="132,584,0,0" Name="btnAtras" VerticalAlignment="Top" Width="81" Click="btnAtras_Click" />
        <ListView ItemsSource="{Binding Source={StaticResource list_alumnos}}" Height="202" HorizontalAlignment="Left" Margin="62,181,0,0" Name="listView1" VerticalAlignment="Top" Width="464" SelectionChanged="listView1_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="ID" DisplayMemberBinding="{Binding Path=alu_ID}" />
                    <GridViewColumn Width="85" Header="DNI" DisplayMemberBinding="{Binding Path=alu_DNI}" />
                    <GridViewColumn Width="85" Header="APELLIDO" DisplayMemberBinding="{Binding Path=alu_Apellido}" />
                    <GridViewColumn Width="85" Header="NOMBRE" DisplayMemberBinding="{Binding Path=alu_Nombre}" />
                    <GridViewColumn Width="152" Header="EMAIL" DisplayMemberBinding="{Binding Path=alu_Email}" />
                </GridView>
            </ListView.View>
        </ListView>  
    </Grid>
</Window>
