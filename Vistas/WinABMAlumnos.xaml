<Window x:Class="Vistas.WinABMAlumnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="Administración de Alumnos" Height="674" Width="1010" WindowStartupLocation="CenterScreen" Background="#FAF0E6" Loaded="Window_Loaded" Closing="Window_Closing">
    <!--Referencia al método que devuelve los datos de alumnos-->
    <Window.Resources>
        <ObjectDataProvider x:Key="LIST_ALUMNO" ObjectType="{x:Type svc:TrabajarAlumnos}" MethodName="TraerAlumnos"></ObjectDataProvider>
    </Window.Resources>
    <Grid Height="632">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="83,308,0,0" Name="txtNom" Text="{Binding Alu_Nombre}" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="83,385,0,0" Name="txtAluEmail" Text="{Binding Alu_Email}" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="59,424,0,0" Name="txtAluDNI" Text="{Binding Alu_DNI}" VerticalAlignment="Top" Width="199"  Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="⏮ Primero" Height="23" HorizontalAlignment="Left" Margin="23,474,0,0" Name="btnPrimero" VerticalAlignment="Top" Width="83" Click="btnPrimero_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="◀ Anterior" Height="23" HorizontalAlignment="Right" Margin="0,474,793,0" Name="btnAnterior" VerticalAlignment="Top" Width="83" Click="btnAnterior_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="Siguiente ▶" Height="23" HorizontalAlignment="Left" Margin="209,474,0,0" Name="btnSiguiente" VerticalAlignment="Top" Width="83" Click="btnSiguiente_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="Último ⏭" Height="23" HorizontalAlignment="Left" Margin="301,474,0,0" Name="btnUltimo" VerticalAlignment="Top" Width="75" Click="btnUltimo_Click" />
        <Label Content="ADMINISTRACIÓN DE ALUMNOS" Height="42" HorizontalAlignment="Left" Margin="301,21,0,0" Name="label1" VerticalAlignment="Top" FontFamily="Lune" FontSize="28" FontWeight="ExtraBold" Foreground="#FF1F8907" />
        <Image Height="124" HorizontalAlignment="Left" Margin="415,69,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="152" Source="/Vistas;component/Images/ModificarAlumno.png" />
        <Label Content="Nombre:" Height="28" HorizontalAlignment="Left" Margin="634,303,0,0" Name="label2" VerticalAlignment="Top" FontFamily="Lune" FontSize="15" />
        <Label Content="Apellido:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="618,347,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content="Email:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="642,385,0,0" Name="label4" VerticalAlignment="Top" />
        <Label Content="DNI:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="655,424,0,0" Name="label5" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,304,0,0" Name="txtNombre" VerticalAlignment="Top" Width="172" FontFamily="Lune" FontSize="16" />

        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,383,0,0" Name="txtEmail" VerticalAlignment="Top" Width="172" FontFamily="Lune" FontSize="16" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_registrar}" Content="Guardar" Height="33" HorizontalAlignment="Left" Margin="579,523,0,0" Name="btnGuardar" VerticalAlignment="Top" Width="75" Click="btnGuardar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_modificar}" Content="Modificar" Height="33" HorizontalAlignment="Left" Margin="675,523,0,0" Name="btnModificar" VerticalAlignment="Top" Width="75" Click="btnModificar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_eliminar}" Content="Eliminar" Height="33" HorizontalAlignment="Left" Margin="774,523,0,0" Name="btnEliminar" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_limpiar}" Content="Cancelar" Height="33" HorizontalAlignment="Left" Margin="871,523,0,0" Name="btnCancelar" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_atras}" Content="Atrás" Height="32" HorizontalAlignment="Left" Margin="441,555,0,0" Name="btnAtras" VerticalAlignment="Top" Width="75" Click="btnAtras_Click" />
        <TextBox Text="{Binding Alu_Apellido}" Background="#0000" FontFamily="Lune" FontSize="15" Height="23" HorizontalAlignment="Left" Margin="101,347,0,0" Name="txtApe" VerticalAlignment="Top" Width="199" BorderThickness="0" Foreground="#FF205FCE" />
        <Label Height="28"
               HorizontalAlignment="Left"
               Margin="675,206,0,0"
               VerticalAlignment="Top"
               FontSize="16"
               FontFamily="Lune"
               Width="162"
               FontStyle="Normal"
               FontWeight="Black"
               Foreground="#FFE23737">
            <TextBlock Text="Elija la operación" TextDecorations="Underline" />
        </Label>

        <RadioButton Content="Alta" Height="16" HorizontalAlignment="Left" Margin="611,256,0,0" Name="rbtnAlta" VerticalAlignment="Top"  FontFamily="Lucida Sans Unicode" FontSize="14" Checked="rbtnAlta_Checked"/>
        <RadioButton Content="Modificación" Height="16" HorizontalAlignment="Left" Margin="675,256,0,0" Name="rbtnModificar" VerticalAlignment="Top"  FontSize="14" FontFamily="Lucida Sans Unicode" Checked="rbtnModificar_Checked"/>
        <RadioButton Content="Eliminación" Height="16" HorizontalAlignment="Left" Margin="792,256,0,0" Name="rbtnEliminar" VerticalAlignment="Top"  FontSize="14" FontFamily="Lucida Sans Unicode" FontWeight="Normal" Checked="rbtnEliminar_Checked"/>
        <Label Content="Alumnos Registrados" Height="28" HorizontalAlignment="Left" Margin="112,266,0,0" Name="label6" VerticalAlignment="Top" FontSize="16" FontFamily="Lune" FontWeight="Black" Foreground="#FF2DBABA" />
        <Label Content="Nombre:" Height="28" HorizontalAlignment="Left" Margin="23,304,0,0" Name="label7" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Apellido:" Height="28" HorizontalAlignment="Left" Margin="23,342,0,0" Name="label8" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Email:" Height="28" HorizontalAlignment="Left" Margin="23,380,0,0" Name="label9" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="DNI:" Height="28" HorizontalAlignment="Left" Margin="23,419,0,0" Name="label10" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,345,0,0" Name="txtApellido" VerticalAlignment="Top" Width="172" FontSize="16" FontFamily="Lune" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,422,0,0" Name="txtDNI" VerticalAlignment="Top" Width="172" FontSize="16" FontFamily="Lune"/>
    </Grid>
</Window>
