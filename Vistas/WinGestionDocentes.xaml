<Window x:Class="Vistas.WinGestionDocentes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="Gestión de Docentes" Height="725" Width="1010" WindowStartupLocation="CenterScreen" Background="#FAF0E6" Loaded="Window_Loaded" Closing="Window_Closing" BorderBrush="#FF5834CB">
    <Window.Resources>
        <ObjectDataProvider x:Key="LIST_DOCENTES"
                        ObjectType="{x:Type svc:TrabajarDocentes}"
                        MethodName="TraerDocentes" />
    </Window.Resources>
    <Grid Width="1005">
        <ComboBox x:Name="cmbDocentes"
          ItemsSource="{Binding Source={StaticResource LIST_DOCENTES}}"
          DisplayMemberPath="Doc_NombreCompleto"
          SelectedValuePath="Doc_ID"
          SelectedValue="{Binding Doc_ID, Mode=TwoWay}"
          Width="172" Height="28" Margin="424,257,0,0"
          HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="cmbDocentes_SelectionChanged" FontFamily="Arial" FontSize="15" />
        <ListView Height="244"
          HorizontalAlignment="Left"
          Margin="178,311,0,0"
          VerticalAlignment="Top"
          Width="691" Name="listCursos" SelectionChanged="listCursos_SelectionChanged" FontFamily="Arial" Background="#FFE5EFEA" Foreground="Black" BorderBrush="#FF6726F5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Curso" Width="130" DisplayMemberBinding="{Binding Cur_Nombre}" />
                    <GridViewColumn Header="Descripción" Width="200" DisplayMemberBinding="{Binding Cur_Descripcion}" />
                    <GridViewColumn Header="Cupo" Width="50" DisplayMemberBinding="{Binding Cur_Cupo}" />
                    <GridViewColumn Header="Fecha de inicio" Width="100">
                        <GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Cur_FechaInicio" StringFormat="{}{0:dd/MM/yyyy}" />
                        </GridViewColumn.DisplayMemberBinding>
                    </GridViewColumn>
                    <GridViewColumn Header="Fecha de finalización" Width="120">
                        <GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Cur_FechaFin" StringFormat="{}{0:dd/MM/yyyy}" />
                        </GridViewColumn.DisplayMemberBinding>
                    </GridViewColumn>
                    <GridViewColumn Header="Estado" Width="85" DisplayMemberBinding="{Binding EstadoNombre}" />
                </GridView>
            </ListView.View>
        </ListView>
        <RadioButton Content="Finalizado" Height="16" HorizontalAlignment="Left" Margin="412,629,0,0" Name="rbdFinalizado" VerticalAlignment="Top" Checked="rbdFinalizado_Checked" FontFamily="Arial" FontSize="14" Foreground="#FF1E2A9A" />
        <RadioButton Content="Cancelado" Height="16" HorizontalAlignment="Left" Margin="522,629,0,0" Name="rdbCancelado" VerticalAlignment="Top" Checked="rdbCancelado_Checked" FontFamily="Arial" FontSize="14" Foreground="#FFBA2121" />
        <Label Content="Gestión de cursos de docentes" Height="42" HorizontalAlignment="Left" Margin="306,12,0,0" Name="label1" VerticalAlignment="Top" FontFamily="Lune" FontSize="28" FontWeight="ExtraBold" Foreground="#FF1F8907" />
        <Image Height="150" HorizontalAlignment="Left" Margin="412,60,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="200" Source="/Vistas;component/Images/GestionDocentes.png" />
        <Label Content="Elija el docente para consultar los cursos que dicta" Height="28" HorizontalAlignment="Left" Margin="306,216,0,0" Name="label2" VerticalAlignment="Top" FontFamily="Lune" FontSize="16" Foreground="#FF3E9DCB" />
        <Label Content="Seleccione un curso en la grilla para darlo por finalizado o cancelarlo" Height="28" HorizontalAlignment="Left" Margin="281,572,0,0" Name="label3" VerticalAlignment="Top" FontFamily="Lune" FontSize="14" Foreground="#FF3E9DCB" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_atras}" Content="Atrás" Height="32" HorizontalAlignment="Left" Margin="92,613,0,0" Name="btnAtras" VerticalAlignment="Top" Width="75" Click="btnAtras_Click" />
    </Grid>
</Window>
