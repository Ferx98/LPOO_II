<Window x:Class="Vistas.EstadosDeCursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VISTAS="clr-namespace:Vistas"
        Title="Estado de los Cursos" Height="350" Width="421" Background="#FAF0E6" FontWeight="SemiBold" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <XmlDataProvider x:Key="tipo_estado" Source="Estados.xml" XPath="/estados" />
        <VISTAS:ConversorDeEstados x:Key="MiConversor"></VISTAS:ConversorDeEstados>
    </Window.Resources>
        <Grid Height="309">
            <ComboBox ItemsSource="{Binding Source={StaticResource tipo_estado},XPath=tipo/@name}"  Height="23" HorizontalAlignment="Left" Margin="82,171,0,0" Name="cmbEstados" VerticalAlignment="Top" Width="120" FontFamily="Lune" />
            <Rectangle Fill="{Binding ElementName=cmbEstados,Path=SelectedValue,Converter={StaticResource MiConversor}}" Height="23" HorizontalAlignment="Right" Margin="0,171,104,0" Name="rectangle1" Stroke="Black" VerticalAlignment="Top" Width="74" />
        <Image Height="85" HorizontalAlignment="Left" Margin="163,35,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="91" Source="/Vistas;component/Images/EstadoDeCursos.png" />
        <Button Content="Atras" Style="{StaticResource ResourceKey=btn_plantilla_atras}" Height="32" HorizontalAlignment="Left" Margin="42,241,0,0" Name="btnAtras" VerticalAlignment="Top" Width="75" Click="btnAtras_Click" />
    </Grid>
</Window>
