<Window x:Class="Vistas.WinABMCursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="Administración de Cursos" Height="729" Width="1010" WindowStartupLocation="CenterScreen" Background="#FAF0E6" Loaded="Window_Loaded" Closing="Window_Closing">
    <!--Referencia al método que devuelve los datos de cursos-->
    <Window.Resources>
        <ObjectDataProvider x:Key="LIST_CURSO"
                        ObjectType="{x:Type svc:TrabajarCursos}"
                        MethodName="TraerCursos" />

        <ObjectDataProvider x:Key="LIST_ESTADOS"
                        ObjectType="{x:Type svc:TrabajarEstados}"
                        MethodName="TraerEstados" />

        <ObjectDataProvider x:Key="LIST_DOCENTES"
                        ObjectType="{x:Type svc:TrabajarDocentes}"
                        MethodName="TraerDocentes" />
    </Window.Resources>
    <Grid Height="699">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="83,308,0,0" Name="txtNom" Text="{Binding Cur_Nombre}" VerticalAlignment="Top" Width="315" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="66,385,0,0" Name="txtCurCupo" Text="{Binding Cur_Cupo}" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="⏮ Primero" Height="23" HorizontalAlignment="Left" Margin="13,592,0,0" Name="btnPrimero" VerticalAlignment="Top" Width="83" Click="btnPrimero_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="◀ Anterior" Height="23" HorizontalAlignment="Right" Margin="0,592,803,0" Name="btnAnterior" VerticalAlignment="Top" Width="83" Click="btnAnterior_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="Siguiente ▶" Height="23" HorizontalAlignment="Left" Margin="199,592,0,0" Name="btnSiguiente" VerticalAlignment="Top" Width="83" Click="btnSiguiente_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_lista}" Content="Último ⏭" Height="23" HorizontalAlignment="Left" Margin="291,592,0,0" Name="btnUltimo" VerticalAlignment="Top" Width="75" Click="btnUltimo_Click" />
        <Label Content="ADMINISTRACIÓN DE CURSOS" Height="42" HorizontalAlignment="Left" Margin="301,21,0,0" Name="label1" VerticalAlignment="Top" FontFamily="Lune" FontSize="28" FontWeight="ExtraBold" Foreground="#FF1F8907" />
        <Image Height="124" HorizontalAlignment="Left" Margin="415,69,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="152" Source="/Vistas;component/Images/MenuCursos.png" />
        <Label Content="Nombre:" Height="28" HorizontalAlignment="Left" Margin="627,303,0,0" Name="label2" VerticalAlignment="Top" FontFamily="Lune" FontSize="15" />
        <Label Content="Descripción:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="588,345,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content="Cupo:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="642,385,0,0" Name="label4" VerticalAlignment="Top" />
        <Label Content="Fecha de inicio:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="561,422,0,0" Name="label5" VerticalAlignment="Top" />
        <Label Content="Fecha de finalización:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="514,456,0,0" Name="label11" VerticalAlignment="Top" />
        <Label Content="Estado:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="627,490,0,0" Name="label12" VerticalAlignment="Top" />
        <Label Content="Docente a cargo:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="560,524,0,0" Name="label13" VerticalAlignment="Top" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,304,0,0" Name="txtNombre" VerticalAlignment="Top" Width="172" FontFamily="Lune" FontSize="16" />

        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,383,0,0" Name="txtCupo" VerticalAlignment="Top" Width="172" FontFamily="Lune" FontSize="16" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_registrar}" Content="Guardar" Height="33" HorizontalAlignment="Left" Margin="579,594,0,0" Name="btnGuardar" VerticalAlignment="Top" Width="75" Click="btnGuardar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_modificar}" Content="Modificar" Height="33" HorizontalAlignment="Left" Margin="675,594,0,0" Name="btnModificar" VerticalAlignment="Top" Width="75" Click="btnModificar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_eliminar}" Content="Eliminar" Height="33" HorizontalAlignment="Left" Margin="774,594,0,0" Name="btnEliminar" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_limpiar}" Content="Cancelar" Height="33" HorizontalAlignment="Left" Margin="871,594,0,0" Name="btnCancelar" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_atras}" Content="Atrás" Height="32" HorizontalAlignment="Left" Margin="441,626,0,0" Name="btnAtras" VerticalAlignment="Top" Width="75" Click="btnAtras_Click" />
        <TextBox Text="{Binding Cur_Descripcion}" Background="#0000" FontFamily="Lune" FontSize="15" Height="23" HorizontalAlignment="Left" Margin="124,347,0,0" Name="txtDes" VerticalAlignment="Top" Width="343" BorderThickness="0" Foreground="#FF205FCE" />
        <Label Height="28"
               HorizontalAlignment="Left"
               Margin="675,206,0,0"
               VerticalAlignment="Top"
               FontSize="16"
               FontFamily="Lune"
               Width="162"
               FontStyle="Normal"
               FontWeight="Black"
               Foreground="#FFE23737">
            <TextBlock Text="Elija la operación" TextDecorations="Underline" />
        </Label>

        <RadioButton Content="Alta" Height="16" HorizontalAlignment="Left" Margin="611,256,0,0" Name="rbtnAlta" VerticalAlignment="Top"  FontFamily="Lucida Sans Unicode" FontSize="14" Checked="rbtnAlta_Checked"/>
        <RadioButton Content="Modificación" Height="16" HorizontalAlignment="Left" Margin="675,256,0,0" Name="rbtnModificar" VerticalAlignment="Top"  FontSize="14" FontFamily="Lucida Sans Unicode" Checked="rbtnModificar_Checked"/>
        <RadioButton Content="Eliminación" Height="16" HorizontalAlignment="Left" Margin="792,256,0,0" Name="rbtnEliminar" VerticalAlignment="Top"  FontSize="14" FontFamily="Lucida Sans Unicode" FontWeight="Normal" Checked="rbtnEliminar_Checked"/>
        <Label Content="Cursos Registrados" Height="28" HorizontalAlignment="Left" Margin="112,266,0,0" Name="label6" VerticalAlignment="Top" FontSize="16" FontFamily="Lune" FontWeight="Black" Foreground="#FF2DBABA" />
        <Label Content="Nombre:" Height="28" HorizontalAlignment="Left" Margin="23,304,0,0" Name="label7" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Descripción:" Height="28" HorizontalAlignment="Left" Margin="23,342,0,0" Name="label8" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Cupo:" Height="28" HorizontalAlignment="Left" Margin="23,380,0,0" Name="label9" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Fecha de inicio:" Height="28" HorizontalAlignment="Left" Margin="23,419,0,0" Name="label10" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Fecha de finalización:" Height="28" HorizontalAlignment="Left" Margin="23,456,0,0" Name="label14" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Estado:" Height="28" HorizontalAlignment="Left" Margin="23,490,0,0" Name="label15" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <Label Content="Docente a cargo:" Height="28" HorizontalAlignment="Left" Margin="23,524,0,0" Name="label16" VerticalAlignment="Top" FontSize="15" FontFamily="Lune"/>
        <TextBox Height="28" HorizontalAlignment="Left" Margin="704,345,0,0" Name="txtDescripcion" VerticalAlignment="Top" Width="172" FontSize="16" FontFamily="Lune" />
        <ComboBox x:Name="cmbEstados"
          ItemsSource="{Binding Source={StaticResource LIST_ESTADOS}}"
          DisplayMemberPath="Est_Nombre"
          SelectedValuePath="Est_ID"
          SelectedValue="{Binding Est_ID, Mode=TwoWay}"
          Width="172" Height="28" Margin="704,490,0,0"
          HorizontalAlignment="Left" VerticalAlignment="Top" />
        <ComboBox x:Name="cmbDocentes"
          ItemsSource="{Binding Source={StaticResource LIST_DOCENTES}}"
          DisplayMemberPath="Doc_NombreCompleto"
          SelectedValuePath="Doc_ID"
          SelectedValue="{Binding Doc_ID, Mode=TwoWay}"
          Width="172" Height="28" Margin="704,524,0,0"
          HorizontalAlignment="Left" VerticalAlignment="Top" />
        <DatePicker Height="28" HorizontalAlignment="Left" Margin="704,422,0,0" Name="dtpFechaInicio" VerticalAlignment="Top" Width="172" />
        <DatePicker Height="27" HorizontalAlignment="Left" Margin="704,457,0,0" Name="dtpFechaFin" VerticalAlignment="Top" Width="172" />
        <TextBox Text="{Binding Cur_FechaInicio}" Height="23" HorizontalAlignment="Left" Margin="155,423,0,0" Name="txtFechaInicio" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <TextBox Text="{Binding Cur_FechaFin}" Height="23" HorizontalAlignment="Left" Margin="199,460,0,0" Name="txtFechaFin" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE" />
        <TextBox Text="{Binding EstadoNombre}" Height="23" HorizontalAlignment="Left" Margin="83,494,0,0" Name="txtEstado" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE"/>
        <TextBox Text="{Binding DocenteNombreCompleto}" Height="23" HorizontalAlignment="Left" Margin="155,528,0,0" Name="txtDocente" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="15" BorderThickness="0" Foreground="#FF205FCE"/>
    </Grid>
</Window>
