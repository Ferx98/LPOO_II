<Window x:Class="Vistas.WinAltaCurso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Cursos" Height="439" Width="497" Background="#FAF0E6" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid Height="404" Width="476">
        <Label Content="Nombre:" Height="28" Margin="81,136,326,0" Name="label1" VerticalAlignment="Top" FontSize="14" />
        <Label Content="Descripcion:" Height="28" HorizontalAlignment="Left" Margin="81,172,0,0" Name="label2" VerticalAlignment="Top" Width="96" FontSize="14" />
        <Label Content="Cupo:" Height="28" HorizontalAlignment="Left" Margin="81,204,0,0" Name="label3" VerticalAlignment="Top" Width="50" FontSize="14" />
        <Label Content="Fecha de inicio:" Height="28" HorizontalAlignment="Left" Margin="81,238,0,0" Name="label4" VerticalAlignment="Top" Width="108" FontSize="14" />
        <TextBox Height="22" HorizontalAlignment="Left" Margin="240,142,0,0" Name="txtNombre" VerticalAlignment="Top" Width="181" TextChanged="CamposCambiaron"/>
        <TextBox Height="22" HorizontalAlignment="Left" Margin="240,178,0,0" Name="txtDescripcion" VerticalAlignment="Top" Width="181" TextChanged="CamposCambiaron"/>
        <TextBox Height="22" HorizontalAlignment="Left" Margin="240,210,0,0" Name="txtCupo" VerticalAlignment="Top" Width="181" TextChanged="CamposCambiaron"/>
        <DatePicker Name="dpFechaInicio" Margin="240,241,55,127" SelectedDateChanged="CamposCambiaron"/>
        <DatePicker Name="dpFechaFin" Margin="240,287,55,85" SelectedDateChanged="CamposCambiaron"/>
        <Image Height="73" HorizontalAlignment="Left" Margin="198,12,0,0" Name="image3" Stretch="Fill" VerticalAlignment="Top" Width="83" Source="/Vistas;component/Images/MenuCursos.png" />
        <Button Style="{StaticResource btnLimpiar}" Content="Limpiar" Height="23" HorizontalAlignment="Left" Margin="338,351,0,0" Name="btnLimpiar" VerticalAlignment="Top" FontSize="14" Width="83" AllowDrop="False" Click="btnLimpiar_Click" />
        <Button Style="{StaticResource btnRegistrar}" Content="Registrar" Height="23" HorizontalAlignment="Right" Margin="0,351,179,0" Name="btnRegistrar" VerticalAlignment="Top" FontSize="14" Width="83" Click="btnRegistrar_Click" />
        <Button Style="{StaticResource btnAtras}"  Content="Atras" Height="23" HorizontalAlignment="Left" Margin="79,351,0,0" Name="btnAtras" VerticalAlignment="Top" FontSize="14" Width="83" Click="btnAtras_Click" />
        <Label Content="Registro de Curso" Height="41" HorizontalAlignment="Left" Margin="136,83,0,0" Name="label5" VerticalAlignment="Top" Width="211" FontSize="20" FontWeight="Bold" Foreground="#FF2D6A6A" />
        <Label Content="Fecha de finalización:" Height="28" HorizontalAlignment="Left" Margin="81,284,0,0" Name="label6" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
