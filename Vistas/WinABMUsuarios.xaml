<Window x:Class="Vistas.WinABMUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="Administracion de Usuarios" Height="674" Width="988" WindowStartupLocation="CenterScreen" Background="#FAF0E6" Loaded="Window_Loaded" Closing="Window_Closing">
    <!--Referencia al método que devuelve los datos de usuarios-->
    <Window.Resources>
        <ObjectDataProvider x:Key="LIST_USER" ObjectType="{x:Type svc:TrabajarUsuario}" MethodName="TraerUsuarios"></ObjectDataProvider>
    </Window.Resources>
    <Grid Height="632">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="102,310,0,0" Name="txtUsuNom" Text="{Binding Usu_NombreUsuario}" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="14" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="102,386,0,0" Name="txtApeNom" Text="{Binding Usu_ApellidoNombre}" VerticalAlignment="Top" Width="199" Background="#0000" FontFamily="Lune" FontSize="14"/>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="102,425,0,0" Name="txtRol" Text="{Binding Rol_Descripcion}" VerticalAlignment="Top" Width="199"  Background="#0000" FontFamily="Lune" FontSize="14"/>
        <Button Content="⏮ Primero" Height="23" HorizontalAlignment="Left" Margin="21,474,0,0" Name="btnPrimero" VerticalAlignment="Top" Width="83" Click="btnPrimero_Click" />
        <Button Content="◀ Anterior" Height="23" HorizontalAlignment="Right" Margin="0,474,772,0" Name="btnAnterior" VerticalAlignment="Top" Width="74" Click="btnAnterior_Click" />
        <Button Content="Siguiente ▶" Height="23" HorizontalAlignment="Left" Margin="209,474,0,0" Name="btnSiguiente" VerticalAlignment="Top" Width="75" Click="btnSiguiente_Click" />
        <Button Content="Último ⏭" Height="23" HorizontalAlignment="Left" Margin="299,474,0,0" Name="btnUltimo" VerticalAlignment="Top" Width="75" Click="btnUltimo_Click" />
        <Label Content="ADMINISTRACIÓN DE USUARIOS" Height="42" HorizontalAlignment="Left" Margin="301,21,0,0" Name="label1" VerticalAlignment="Top" FontFamily="Lune" FontSize="28" FontWeight="ExtraBold" Foreground="#FF1F8907" />
        <Image Height="124" HorizontalAlignment="Left" Margin="415,69,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="152" Source="/Vistas;component/Images/AltaUsuario.png" />
        <Label Content="Nombre de usuario:" Height="28" HorizontalAlignment="Left" Margin="583,310,0,0" Name="label2" VerticalAlignment="Top" FontFamily="Lune" FontSize="15" />
        <Label Content="Contraseña:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="583,358,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content="Apellido y Nombre:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="583,404,0,0" Name="label4" VerticalAlignment="Top" />
        <Label Content="Rol:" FontFamily="Lune" FontSize="15" Height="28" HorizontalAlignment="Left" Margin="583,453,0,0" Name="label5" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="774,314,0,0" Name="txtNombreUsuario" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="774,358,0,0" Name="txtContraseña" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="774,404,0,0" Name="txtApellidoNombre" VerticalAlignment="Top" Width="120" />
        <ComboBox DisplayMemberPath="Rol_Descripcion" SelectedValuePath="Rol_ID" Height="23" HorizontalAlignment="Left" Margin="774,453,0,0" Name="cmbRoles" VerticalAlignment="Top" Width="120" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_registrar}" Content="Guardar" Height="33" HorizontalAlignment="Left" Margin="579,523,0,0" Name="btnGuardar" VerticalAlignment="Top" Width="75" Click="btnGuardar_Click"/>
        <Button Style="{StaticResource ResourceKey=btn_plantilla_modificar}" Content="Modificar" Height="33" HorizontalAlignment="Left" Margin="675,523,0,0" Name="btnModificar" VerticalAlignment="Top" Width="75" Click="btnModificar_Click"/>
        <Button Style="{StaticResource ResourceKey=btn_plantilla_eliminar}" Content="Eliminar" Height="33" HorizontalAlignment="Left" Margin="774,523,0,0" Name="btnEliminar" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click" />
        <Button Style="{StaticResource ResourceKey=btn_plantilla_limpiar}" Content="Cancelar" Height="33" HorizontalAlignment="Left" Margin="871,523,0,0" Name="btnCancelar" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click"/>
        <Button Style="{StaticResource ResourceKey=btn_plantilla_atras}" Content="Atrás" Height="32" HorizontalAlignment="Left" Margin="441,555,0,0" Name="btnAtras" VerticalAlignment="Top" Width="75" Click="btnAtras_Click" />
        <TextBox Text="{Binding Usu_Contraseña}" Background="#0000" FontFamily="Lune" FontSize="14" Height="23" HorizontalAlignment="Left" Margin="102,347,0,0" Name="txtPassword" VerticalAlignment="Top" Width="199" />
    </Grid>
</Window>
